{
    "mcpServers": {
        "ha mcp prod": {
            "command": "uvx",
            "args": [
                "hass-mcp"
            ],
            "env": {
                "HA_URL": "http://ha:8123",
                "HA_TOKEN_DEV": ""
            }
        },
        "ha mcp dev": {
            "command": "uvx",
            "args": [
                "hass-mcp"
            ],
            "env": {
                "HA_URL": "http://localhost:8123",
                "HA_TOKEN_DEV": ""
            }
        }
    }
}