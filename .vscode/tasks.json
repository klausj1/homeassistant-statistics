{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Home Assistant (Dev)",
            "type": "shell",
            "command": "./scripts/develop",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "bash -lc 'set -a; [ -f .env ] && source .env; set +a; ${config:python.defaultInterpreterPath} -m pytest tests/'",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Ruff (Lint)",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath} -m ruff check .",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Ruff (Format)",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath} -m ruff format .",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Code Coverage",
            "type": "shell",
            "command": "bash -lc 'set -a; [ -f .env ] && source .env; set +a; ${config:python.defaultInterpreterPath} -m pytest tests/ --cov=custom_components/import_statistics --cov-report term-missing --cov-report html'",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Setup Dev Environment",
            "type": "shell",
            "command": "./scripts/setup",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Config",
            "type": "shell",
            "command": "./scripts/clean_config",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "Fix HA Errors",
            "type": "shell",
            "command": "./scripts/fix_ha_errors",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
            
        },
        {
            "label": "Stop Home Assistant",
            "type": "shell",
            "command": "bash -lc 'pkill -f homeassistant || echo \"Home Assistant not found or already stopped\"'",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        }
    ]
}